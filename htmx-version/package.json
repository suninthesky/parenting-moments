{
  "name": "parenting-moments",
  "version": "1.0.0",
  "description": "A simple parenting game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
